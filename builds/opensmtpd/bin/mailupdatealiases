#!/bin/sh
set -euf -o pipefail
[[ "$(/usr/bin/id -u)" == "0" ]] || exec sudo "$0" "$@"

forwards_file=/etc/stmpd/tables/forwards
aliases_file=/etc/stmpd/tables/aliases
aliases_db=/etc/stmpd/tables/aliases.db

cat "$aliases_file" "$forwards_file" | makemap -o "$aliases_db" -
chown smtpd "$aliases_db"
smtpctl update table aliases
